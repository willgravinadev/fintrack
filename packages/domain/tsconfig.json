{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["ES2022"],
    "paths": {
      "@contracts-providers/*": ["./src/contracts-providers/*"],
      "@contracts-repositories/*": ["./src/contracts-repositories/*"],
      "@errors/*": ["./src/errors/*"],
      "@models/*": ["./src/models/*"],
      "@shared/*": ["./src/shared/*"],
      "@value-objects/*": ["./src/value-objects/*"]
    }
  },
  "exclude": ["node_modules"],
  "extends": "@fintrack/tsconfig/base.json",
  "include": ["**/*.ts"]
}
