{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["ES2022", "DOM"],
    "paths": {
      "@/*": ["./src/*"],
      "@rest-controllers/*": ["src/controllers/rest/*"],
      "@use-cases/*": ["src/use-cases/*"]
    },
    "resolveJsonModule": true
  },
  "exclude": ["node_modules"],
  "extends": "@fintrack/tsconfig/base.json",
  "include": ["**/*.ts", "**/*.tsx"]
}
